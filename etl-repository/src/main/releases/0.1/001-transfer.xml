<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog 
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd 
        http://www.liquibase.org/xml/ns/dbchangelog 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

	<changeSet id="transfer" author="${user}">

		<createTable tableName="transfer" remarks="Data transfer">
			<column name="id" type="integer" autoIncrement="true" remarks="Identifier">
				<constraints nullable="false" />
			</column>
			<column name="internal_name" type="varchar(63)" remarks="Internal name">
				<constraints nullable="false" />
			</column>
			<column name="name" type="varchar(255)" remarks="Name">
				<constraints nullable="false" />
			</column>
			<column name="source_id" type="integer" remarks="Data transfer source identifier">
				<constraints nullable="false" />
			</column>
			<column name="destination_id" type="integer" remarks="Data transfer destination identifier">
				<constraints nullable="false" />
			</column>
			<column name="description" type="varchar(4000)" remarks="Description">
				<constraints nullable="true" />
			</column>
		</createTable>
		
		<addPrimaryKey 
			constraintName="pk_transfer" 
			tableName="transfer"
			columnNames="id" />
			
		<addUniqueConstraint 
			constraintName="uc_transfer" 
			tableName="transfer"
			columnNames="internal_name" />
			
		<createIndex 
			indexName="i_transfer$source_id" 
			tableName="transfer">
			<column name="source_id" />
		</createIndex>

		<addForeignKeyConstraint 
			constraintName="fk_transfer$source_id"
			baseTableName="transfer" 
			baseColumnNames="source_id" 
			referencedTableName="source" 
			referencedColumnNames="id" />

		<createIndex 
			indexName="i_transfer$destination_id" 
			tableName="transfer">
			<column name="destination_id" />
		</createIndex>

		<addForeignKeyConstraint 
			constraintName="fk_transfer$destination_id"
			baseTableName="transfer" 
			baseColumnNames="destination_id" 
			referencedTableName="source" 
			referencedColumnNames="id" />

	</changeSet>


</databaseChangeLog>
